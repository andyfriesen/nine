
class Vertex:
    var x as float
    var y as float
    var z as float

    var r as float
    var g as float
    var b as float

    static def new(x as float, y as float, z as float) as Vertex:
        var vert = Vertex()
        vert.x = x
        vert.y = y
        vert.z = z
        return vert

    def color(r as float, g as float, b as float) as Vertex:
        self.r = r
        self.g = g
        self.b = b
        return self

